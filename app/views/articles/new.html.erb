<h2>Write a New Article</h2>
<%= form_for(@article) do |f| %>
<% if @article.errors.any? %>
  Oooops! <%= pluralize(@article.errors.count, "error") %>
  <ul>
  	<%= @article.errors.full_messages.each do |msg| %>
  	<li><%= msg %></li>
  	<% end %>
  </ul>
<% end %>
    <%= f.label :title %>
    <%= f.text_field :title %><br />
    <%= f.label :content %><br />
    <%= f.text_area :content %>
    <%= f.submit "Submit" %>
<% end %>